{{#if virtualScrollbar}}
  {{#ember-scrollable
    classNames='lt-scrollable'
    autoHide=autoHide
    horizontal=horizontal
    vertical=vertical
    scrollToY=_scrollTopSet
    onScrollY=(action 'onScroll')
  }}
    {{yield (hash scrollTop=_scrollTopGet scrollTo=(action 'scrollTo'))}}
  {{/ember-scrollable}}
{{else}}
  {{#standard-scrollable
    classNames='lt-scrollable'
    scrollToY=_scrollTopSet
    onScroll=(action 'onScroll')
  }}
    {{yield (hash scrollTop=_scrollTopGet scrollTo=(action 'scrollTo'))}}
  {{/standard-scrollable}}
{{/if}}
