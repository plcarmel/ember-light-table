{{#if virtual}}
  {{#ember-scrollable
    class=class
    classNames=classNames
    autoHide=autoHide
    horizontal=horizontal
    vertical=vertical
    scrollToY=_scrollTopSet
    onScrollY=(action 'onScroll')
  }}
    {{yield (hash scrollTop=_scrollTopGet onScrollTo=(action 'onScrollTo'))}}
  {{/ember-scrollable}}
{{else}}
  {{#standard-scrollable
    class=class
    classNames=classNames
    scrollToY=_scrollTopSet
    onScroll=(action 'onScroll')
  }}
    {{yield (hash scrollTop=_scrollTopGet onScrollTo=(action 'onScrollTo'))}}
  {{/standard-scrollable}}
{{/if}}
